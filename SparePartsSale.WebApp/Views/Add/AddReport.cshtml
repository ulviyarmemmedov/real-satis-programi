@using SparePartsSale.WebApp.Models.AddVMs;

@{
    ViewData["Title"] = "Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model AddReportVm;
@{
    ViewData["Title"] = "report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    <link href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet" />
}
<div class="content-wrapper ">
    <div class="content ">
        <div class="row justify-content-end">
            <div class="col-lg-12 ">
                <div style="width:100%;">
                    <a href="@Url.Action("addproduct","add")" class="btn btn-info" style="float: right; margin-bottom: 10px;">New</a>
                </div>
                <table id="MyTable" class="table table-bordered ">

                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Cəmi</th>
                            <th scope="col">Ödəmə Növü</th>
                            <th scope="col">Mağaza</th>
                            <th scope="col">Sənəd Nömrəsi</th>
                            <th scope="col">Tarix</th>
                            <th scope="col">Müştəri</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Report)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Total</td>
                                <td>@item.DocType</td>
                                <td>@item.Place</td>
                                <td>@item.DocNo</td>
                                <td>@item.Date</td>
                                <td>@item.Vendor</td>
                                <td><a href="@Url.Action("AddUpdate", "add", new { id = item.Id })" class="btn btn-info">Update</a></td>
                                <td><a href="@Url.Action("Delete", "add", new { id = item.Id })" class="btn btn-danger">Delete</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

    <script>

        var js = jQuery.noConflict(true);
        js(document).ready(function () {
            js('#MyTable').DataTable({
                "order": [[0, "desc"]]
            });
        });
    </script>
}
